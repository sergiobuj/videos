<%= error_messages_for :rent %>

<% form_for(@rent) do |f| %>
  <p>
    <b>Rent code</b><br />
    <%= f.text_field :rent_code %>
  </p>

  <p>
    <b>Movie code</b><br />
    <%=f.collection_select :movie_code,Movie.find_all_by_available(true),:movie_code,:movie_title %>

  </p>

  <p>
    <b>Client</b><br />
    <%=f.collection_select :client_code,Client.find(:all),:client_id,:client_id %>
  </p>

  <p>
    <b>Employee</b><br />
    <%=f.collection_select :emp_code,Employee.find(:all),:emp_id, :emp_id %>
  </p>

  <p>
    <b>Rent date</b><br />
    <%= f.date_select :rent_date %>
  </p>

  <p>
    <b>Exp date</b><br />
    <%= f.date_select :exp_date %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', rents_path %></DIV>
