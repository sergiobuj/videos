<h1>Login#login</h1>
<DIV ALIGN=CENTER>
<div class="depot-form">
  <fieldset>
    <legend>Please Log In</legend>
    <% form_tag do %>
       <p>
         <label for="name">Username:</label></p>
       <p>
         <%= text_field_tag :name, params[:name] %>
       </p>
       <p>
         <label for="password">User password:</label></p>
       <p>
         <%= password_field_tag :password, params[:password] %>
       </p>
       <p>
         <%= submit_tag "Login" %>
       </p>
    <% end %>
  </fieldset>
  | <%= link_to "See Movie List" , :controller => 'movies', :action => 'search_temp' %> |
</div></DIV>

