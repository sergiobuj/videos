class Phone < ActiveRecord::Base
validates_presence_of :code_person, :phone_number
validates_numericality_of :code_person
validate :valid_code_person


protected
def valid_code_person
    errors.add(:code_person, 'The person (Employee or Client) code has to be numerical and greater than zero' ) if code_person.nil? ||
    code_person < 0
end


end
